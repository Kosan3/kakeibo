<div class="row" style="margin: 15px 0;">
	<div class="col-xs-12 col-md-8 col-md-offset-2 index">
		<p><%= @user.name %>さんの支出</p>
		<h4><%= @ago_month.strftime('%Y年%m月') %></h4>
		<table class='table'>
			<thead>
				<tr>
					<th>日付</th>
					<th>項目</th>
					<th>金額</th>
				</tr>
			</thead>
			<tbody>
				<% @ago_books.each do |book| %>
				<tr>
					<td><%= link_to book.sale_date.strftime("%m-%d"), book_path(book)  %></td>
					<td><%= link_to book.name, book_path(book) %></td>
					<td><%= book.money.to_s(:delimited) %></td>
				</tr>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<th></th>
					<th>合計</th>
					<th><%= default(@ago_books_sum) %></th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>