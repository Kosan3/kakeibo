<div class="row" style="margin: 15px 0;">
	<div class="col-xs-12 col-md-8 col-md-offset-2 index">
		<%= search_form_for(@q) do |f| %>
			<div class="forms">
				<%= f.label :name_cont, '項目' %>
				<%= f.search_field :name_cont %>
				<%= f.submit '検索', class: 'btn btn-primary' %>
			</div>
			<div class="forms">
				<%= f.label :sale_date_cont, '日付' %>
				<%= f.search_field :sale_date_cont, placeholder: '2020-03-01' %>
				<%= f.submit '検索', class: 'btn btn-danger' %>
			</div>
		<% end %>
		<p><%= @user.name %>さんの支出</p>
		<h4>全データ</h4>
		<table class='table'>
			<thead>
				<tr>
					<th>日付</th>
					<th>項目</th>
					<th>金額</th>
				</tr>
			</thead>
			<tbody>
				<% @books_all.each do |book| %>
				<tr>
					<td><%= link_to book.sale_date.strftime("%m/%d"), book_path(book)  %></td>
					<td><%= link_to book.name, book_path(book) %></td>
					<td><%= book.money.to_s(:delimited) %></td>
				</tr>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<th></th>
					<th>合計</th>
					<th><%= default(@books_all_sum) %></th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>