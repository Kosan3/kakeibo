<div class="row" style="margin: 15px 0;">
	<div class="col-xs-12 col-md-8 col-md-offset-2 index">
		<p><%= @user.name %>さんの支出</p>
		<h2><%= @now_month.strftime('%Y年%m月') %></h2>
		<table class='table'>
			<thead>
				<tr>
					<th>日付</th>
					<th>項目</th>
					<th>金額</th>
					<th>コメント</th>
					<th colspan=2></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= book.sale_date.strftime("%m-%d")  %></td>
					<td><%= book.name %></td>
					<td><%= book.money.to_s(:delimited) %></td>
					<td><%= book.comment %></td>
					<td><%= link_to 'EDIT', edit_book_path(book), class: 'btn btn-primary btn-xs' %></td>
					<td><%= link_to 'DELETE', book_path(book), method: :delete, 'data-confirm' => '本当に削除しますか?', class: 'btn btn-danger btn-xs' %>
				</tr>
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<th></th>
					<th>合計金額</th>
					<th><%= default(@books_sum) %></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
